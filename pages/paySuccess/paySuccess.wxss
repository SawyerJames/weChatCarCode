/*页脚样式  */
@import "../footer-template/footerTemplate.wxss";

page {
    background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#28b3ee), to(#1dd1f8));
}

/* 支付成功 */

.payPass {
    width: 70%;
    height: 400rpx;
    border-radius: 10rpx;
    box-shadow: 1px 1px 5px 0px #28b3ee;
    margin-top: 30%;
    background: #fff;
    color: #28b3ee;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
}

icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100rpx;
    border: 4rpx solid #fff;
    background: #fff;
    position: absolute;
    z-index: 1;
    top: -50rpx;
}

.title {
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
    letter-spacing: 4rpx;
}

.price {
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 50rpx;
}

.submitBtn {
    width: 45%;
    height: 80rpx;
    border-radius: 10rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    background: url("data:image/png;base64,") no-repeat;
    background-size: cover;
}

.footerContainer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    color: #fff;
    text-align: center;
    font-size: 32rpx;
}

.footer_sign {
    font-size: 20rpx;
    color: #fff;
}
