/*页脚样式  */
@import "../footer-template/footerTemplate.wxss";
page {
    background: #f2f2f2;
}

/* 头部 */

.header {
    width: 100%;
    height: 100rpx;
    background: #fff;
    box-sizing: border-box;
    padding: 0 4%;
    color: #f76361;
    font-weight: bold;
    display: flex;
    align-items: center;
}
.header icon{
    margin: -6rpx 10rpx 0 0;
}
/* 主体 */

.content {
    width: 100%;
    height: auto;
    background: #fff;
    margin: 20rpx 0 60rpx;
    box-sizing: border-box;
    padding: 5%;
    color: #333;
}
.content_header,.content_middle view,.content_footer{
    width: 100%;
    height: 60rpx;
    border-bottom: 1px solid #ddd;
    margin-bottom: 10rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.content_header{
    font-weight: bold;
    font-family: sans-serif;
    color: #333;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}
.content_middle{
    width: 100%;
    margin-bottom: 20rpx;
    color: #666;
}
.content_middle view{
    border: none;
}
.content_footer{
    border: none;
    margin-bottom: 0;
    color: #28b3ee;
    font-weight: bold;
}
.content_footer image{
    width: 30rpx;
    height: 30rpx;
}
/* 暂停使用按钮 */

.payBtn {
    width: 60%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 8rpx;
    font-size: 32rpx;
    box-shadow: 1px 1px 5px 1px #ddd;
    color: #fff;
    background: url("data:image/png;base64,") no-repeat;
    background-size: cover;
}
