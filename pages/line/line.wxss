/*页脚样式  */
@import "../footer-template/footerTemplate.wxss";

page {
    background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#28b3ee), to(#1dd1f8));
}

.addressContainer {
    width: 100%;
    height: 80rpx;
    color: #fff;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    box-sizing: border-box;
    padding: 0 5%;
}

.addressContainer image {
    width: 40rpx;
    height: 40rpx;
    margin: 0 10rpx 0 4rpx;
}

/* 机场主体 */

.busContent {
    width: 90%;
    height: auto;
    background: #fff;
    border-radius: 10rpx;
    margin: 100rpx auto 140rpx;
    padding-bottom: 30rpx;
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

 .busContent image {
    width: 160rpx;
    height: 128rpx;
    position: absolute;
    top: -64rpx;
    left: 50%;
    margin-left: -80rpx;
    z-index: 11;
}

.busContent .title {
    width: 90%;
    text-align: center;
    border-bottom: 1px dashed #ddd;
    font-size: 38rpx;
    color: #3a98e2;
    padding-bottom: 20rpx;
    margin: 80rpx 0 20rpx;
}

.busRouteContent{
    width: 90%;
    text-align: center;
    border-bottom: 1px dashed #ddd;
    padding-bottom: 20rpx;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.busRouteContent .route{
    color: #666;
    font-size: 26rpx;
    margin-bottom: 20rpx;
}

.busRouteContent .routeDetail{
    width: 80%;
    font-size: 22rpx;
    line-height: 40rpx;
    color: #999;
}

/* 页脚 */

.footerContainer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    color: #fff;
    text-align: center;
    font-size: 32rpx;
}

.footer_sign {
    font-size: 20rpx;
    color: #fff;
}
